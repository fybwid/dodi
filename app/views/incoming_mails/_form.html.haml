= form_for :incoming_mail, url: incoming_mails_path do |f|
  - if @incoming_mail.errors.any?
    #error_explanation
      %h2
        = pluralize(@incoming_mail.errors.count, "error")
        prohibited
        this article from being saved:
      %ul
        - @incoming_mail.errors.full_messages.each do |msg|
          %li= msg
  %p
    = f.label :title
    %br/
    = f.text_field :title, size: "60"
  %p
    = f.label :description
    %br/
    = f.text_area :description, size: "60x12" 
  %p
    = f.submit